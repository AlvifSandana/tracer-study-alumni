generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = env("DEV_DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Alumnis {
  id        Int       @id @default(autoincrement())
  nim       String    @unique
  nik       String
  npwp      String?
  nama      String
  gender    String
  angkatan  String?
  lulus     String?
  alamat    String?
  telepon   String?
  email     String    @unique
  password  String
  tracered  String    @default("false")
  answers   Answers[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

